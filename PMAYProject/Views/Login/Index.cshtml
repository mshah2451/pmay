    <style>
        .form-check input[type="checkbox"] {
            cursor: pointer;
            position: absolute;
            width: 15px;
            height: 15px;
            top: 2px;
            left: -7px;
            z-index: 1;
            opacity: 1;
        }

        .login-page-content .login-box .login-form .form-group .forgot-btn {
            font-size: 14px;
            color: #ff0000;
            font-weight: 500;
