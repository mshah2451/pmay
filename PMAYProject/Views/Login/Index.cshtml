        }
    </style>
</head>
<body>

    <!-- Preloader Start Here -->
    <div id="preloader"></div>
    <!-- Preloader End Here -->
    <!-- Login Page Start Here -->
    <div class="login-page-wrap" id="loginpage">
        <div class="login-page-content">
            <div class="login-box">
                <div class="item-logo">
                    @*<img src="~/Content/img/saluja.png" alt="logo">*@
                </div>
                <div class="">
                    <h3 class="text-center">User's Login</h3>
                </div>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {@Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="login-form">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" placeholder="Email" id="txtUsername" class="form-control" name="UserId">
                        <i class="fa fa-envelope"></i>

                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" id="txtPassword" placeholder="Enter password" class="form-control" name="Password">
                        <i class="fa fa-eye" onclick="ShowPassword()" id="pasFont"></i>
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-between">

                        <div class="form-check">

                            <input type="checkbox" class="form-check-input" id="Isremember" name="Isremember" value="true">
                            @*<input name="Isremember" type="hidden" value="false">*@
                            <label for="Isremember" class="form-check-label">Remember Me</label>
                        </div>
                        <a id="forgotpassword" class="forgot-btn">Forgot Password?</a>
                    </div>
                    <div class="form-group">
                        @*<a href="index.html" class="login-btn">Login</a>*@
                        <input type="submit" id="" value="Login" class="login-btn" />

                    </div>
                    <label style="color: red; font-weight: bold" id="errormsg"></label>
                </div>            }
                <div id="error" class="modal">

                    <!-- Modal content -->
                    <div class="modal-content">
                        <span class="close">&times;</span>
                        <p style="color:red;">UserName or Password not valid</p>
                    </div>

                </div>
                <!-- <div class="login-social">
                    <p>or sign in with</p>
                    <ul>
                        <li><a href="#" class="bg-fb"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#" class="bg-twitter"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#" class="bg-gplus"><i class="fab fa-google-plus-g"></i></a></li>
                        <li><a href="#" class="bg-git"><i class="fab fa-github"></i></a></li>
                    </ul>
                </div> -->
            </div>

        </div>
    </div>
    <div class="login-page-wrap" id="forgotpaswordpage" style="display: none;">
        <div class="login-page-content">
            <div class="login-box">
                <div class="item-logo">
                    <img src="/Content/img/saluja.png" alt="logo">
                </div>
                <div class="">
                    <h3 class="text-center">Forgot Password</h3>
                </div>
                <form action="" class="login-form">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" id="txtUsernameotp" placeholder="User Id" class="form-control">
                        <i class="fa fa-envelope"></i>
                    </div>
                    <div class="form-group">
                        <a id="sendOtp" class="login-btn">Send OTP</a>
                    </div>
                    <div class="form-group">
                        <label>OTP</label>
                        <input type="text" id="txtOPT" placeholder="Enter OTP" class="form-control">

                    </div>

                    <div class="form-group">
                        <label>New Password</label>
                        <input type="password" id="txtPasswordFogot" placeholder="Enter New Password" class="form-control">
                        <i class="fa fa-eye"></i>
                    </div>

                    <div class="form-group">
                        <a id="RestPassword" class="login-btn">Reset Password</a>
                    </div>
                    <p class="text-center">Back to <a href="">Login</a></p>
                </form>

                <div id="error" class="modal">

                    <!-- Modal content -->
                    <div class="modal-content">
                        <span class="close">×</span>
                        <p style="color:red;">UserName or Password not valid</p>
                    </div>

                </div>
                <!-- <div class="login-social">
                    <p>or sign in with</p>
                    <ul>
                        <li><a href="#" class="bg-fb"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#" class="bg-twitter"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#" class="bg-gplus"><i class="fab fa-google-plus-g"></i></a></li>
                        <li><a href="#" class="bg-git"><i class="fab fa-github"></i></a></li>
                    </ul>
                </div> -->
            </div>

        </div>
    </div>
